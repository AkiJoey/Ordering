<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.akijoey.repository.MenuRepository">

    <select id="findAll" resultType="Menu">
		select * from menu limit #{param1}, #{param2}
	</select>

    <select id="count" resultType="int">
		select count(id) from menu;
	</select>

    <select id="findById" parameterType="long" resultType="Menu">
		select * from menu where id = #{id}
	</select>

    <insert id="save" parameterType="Menu">
		insert into menu(name, price, flavor) values(#{name}, #{price}, #{flavor})
	</insert>

    <update id="update" parameterType="Menu">
		update menu set name = #{name}, price = #{price}, flavor = #{flavor} where id = #{id}
	</update>

    <delete id="deleteById" parameterType="long">
		delete from menu where id = #{id}
	</delete>
</mapper>